    <sql id="Base_Column_List">
        stu_id,user_name,stu_num,stu_name,stu_age,stu_sex,stu_profession,stu_college,stu_address,stu_qq,stu_email,stu_photo,stu_hobbies,stu_recommend,stu_phone,home_info,createtime,modifytime
